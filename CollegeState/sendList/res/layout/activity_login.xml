<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#222"
    tools:context=".Login" >

     <TextView 
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textSize="18sp"
        android:textColor="#aaa"
        />

    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingTop="100sp" >

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_num" 
            android:textSize="22sp"
            android:textColor="#0f0"
            />

        <AutoCompleteTextView
            android:id="@+id/accountEdit"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.37"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner1"
        android:orientation="horizontal"
        android:paddingLeft="20sp"
        android:paddingTop="10sp" >

        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textSize="22sp"
            android:textColor="#0f0"
             />

        <EditText
            android:id="@+id/passEdit"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.66"
            android:inputType="textPassword" />
    </LinearLayout>


        <Button
            android:id="@+id/enter"
            android:layout_below="@+id/liner2"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:background="#0ea"
            android:text="@string/enter"
            android:textSize="25sp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_alignTop="@+id/registe"
        android:background="#222"
        android:checked="true"
        android:text="@string/remember"
        android:textColor="#eee"
        android:textSize="23sp" />

    <Button
        android:id="@+id/registe"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_alignRight="@+id/liner2"
        android:layout_below="@+id/enter"
        android:layout_marginTop="59dp"
        android:background="#222"
        android:text="@string/registe"
        android:textColor="#fff"
        android:textSize="23sp" />

</RelativeLayout>
