<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_info_LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip" >

    <ImageView
        android:id="@+id/shop_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="京派家常菜"
            android:textColor="#000000"
            android:textSize="20dip"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shop_sales_volume"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/shop_name"
            android:singleLine="true"
            android:text="月销量100"
            android:textColor="#808080"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/shop_state"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/shop_name"
            android:layout_alignBottom="@+id/shop_name"
            android:layout_alignParentRight="true"
            android:text="营业中"
            android:textColor="#808080"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/shop_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shop_state"
            android:text="荐"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25dip" />

        <TextView
            android:id="@+id/shop_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/shop_sales_volume"
            android:layout_alignBottom="@+id/shop_sales_volume"
            android:layout_centerHorizontal="true"
            android:text="好评"
            android:textColor="#808080"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="5dp"
            android:text="地址"
            android:textColor="#FF0000" />
    </RelativeLayout>

</LinearLayout>