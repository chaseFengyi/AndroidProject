<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_shop_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPagerShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shop_bottomMenu"
        android:layout_gravity="center" >

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/PagerTitleShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="#FFFFFF"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true" >
        </android.support.v4.view.PagerTitleStrip>
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/shop_bottomMenu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <!-- 首页 -->

        <Button
            android:id="@+id/shop_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/shouye_default" />

        <!-- 餐店 -->

        <Button
            android:id="@+id/shop_candian"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/candian_green" />

        <!-- 购物车 -->

        <Button
            android:id="@+id/shop_shopping_cart"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/gouwuche_default" />

        <!-- 我的 -->

        <Button
            android:id="@+id/shop_wode"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/wode_default" />
    </LinearLayout>

</RelativeLayout>