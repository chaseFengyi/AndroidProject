<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingBottom="10dp">
    
    <ImageView 
        android:id="@+id/iv_item_setting_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/setting_img_desc"/>
	
    <ImageView 
        android:id="@+id/iv_item_setting_end_view"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/right_arrow"
        android:contentDescription="@string/setting_img_desc"/>
    
    <TextView 
        android:id="@+id/tv_item_setting_content"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/iv_item_setting_view"
        android:layout_toRightOf="@+id/iv_item_setting_view"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:text="编辑账号(测试)"/>
    
</RelativeLayout>
