<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/sample_material_delete"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginRight="10sp"
        android:background="@drawable/bt_dynamic_del_unfocused"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal" >
<!-- 
        <ImageView
            android:id="@+id/sample_picture"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginBottom="2sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="2sp"
            android:background="@drawable/icon_addpic" /> -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sample_material_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sample_material_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>