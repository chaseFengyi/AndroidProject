<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/camearGallery_rela"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/camearGalleryBack"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="left|center"
            android:background="@drawable/backbutton" />

        <TextView
            android:id="@+id/camearGalleryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/camearGalleryLine"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/camearGallery_rela"
        android:background="#000000" />

    <ImageView
        android:id="@+id/camearGalleryPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camearGalleryLine"
        android:layout_marginTop="10sp" />

    <TextView
        android:id="@+id/camearGalleryNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camearGalleryPicture"
        android:layout_marginTop="40sp"
        android:text="@string/foodname_input"
        android:textColor="@color/cadetblue"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/camearGalleryNameExt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camearGalleryNameTxt"
        android:layout_marginTop="10sp"
        android:inputType="text"
        android:textColor="@color/dodgerblue"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/camearGalleryIntroduceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camearGalleryNameExt"
        android:layout_marginTop="20sp"
        android:text="@string/foodintroduce"
        android:textColor="@color/cadetblue"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/camearGalleryIntroduceExt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camearGalleryIntroduceTxt"
        android:layout_marginTop="10sp"
        android:inputType="text"
        android:textColor="@color/dodgerblue"
        android:textSize="22sp" />

    <Button
        android:id="@+id/camearGalleryOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/bt_goodfood_selector"
        android:text="@string/ok"
        android:textSize="24sp" />

</RelativeLayout>