<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/materialNameSampleTxt"
	        android:layout_width="0sp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:text="@string/materialname"
	        android:textSize="22sp"
	        />
	    <EditText 
	        android:id="@+id/materialNameSampleEdit"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:inputType="text"
	        />
	</LinearLayout>
    <LinearLayout 
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/materialWeightSampleTxt"
	        android:layout_width="0sp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:text="@string/materialweight"
	        android:textSize="22sp"
	        />
	    <EditText 
	        android:id="@+id/materialWeightSampleEdit"
	        android:layout_width="0sp"
	        android:layout_height="wrap_content"
	        android:layout_weight="2"
	        android:inputType="number"
	        />
	</LinearLayout>  

</LinearLayout>
